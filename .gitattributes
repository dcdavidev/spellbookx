# Enforce Unix-style line endings
* text=auto eol=lf

# Treat lockfiles as text
package-lock.json text eol=lf

# Mark certain file types as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.mp4 binary
*.mov binary
*.webp binary
*.weba binary
*.webm binary
*.lottie binary
*.svg text eol=lf

# Ensure shell scripts are always LF
*.sh text eol=lf

# Ensure batch files stay CRLF on Windows
*.bat text eol=crlf
