{
  "name": "spellbookx",
  "version": "0.5.5",
  "private": false,
  "description": "A magical CLI for crafting developer toolchains, automation, environments, and wizards",
  "keywords": [
    "cli",
    "spellbookx",
    "magical",
    "automation",
    "toolchain",
    "typescript",
    "commander",
    "inquirer",
    "chalk",
    "boxen",
    "developer-tools",
    "devops",
    "wizard"
  ],
  "homepage": "https://github.com/dcdavidev/spellbookx#readme",
  "bugs": {
    "url": "https://github.com/dcdavidev/spellbookx/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dcdavidev/spellbookx.git",
    "directory": "packages/spellbookx"
  },
  "license": "MIT",
  "author": "Davide Di Criscito",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "sbx": "./dist/index.js",
    "spellbookx": "./dist/index.js"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "commitlint-config-spellbookx": "workspace:^",
    "cspell-config-spellbookx": "workspace:^",
    "eslint-plugin-spellbookx": "workspace:^",
    "inquirer": "^13.0.1",
    "prettier-config-spellbookx": "workspace:^",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "tags": [
      "cli"
    ],
    "targets": {
      "dev": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "{projectRoot}",
          "command": "node dist/index.js"
        }
      }
    }
  }
}
